#:import toolbox toolbox

<ToolButton@ToggleButton>:
    size_hint: None, None
    width: 48
    height: 48
    group: "tool"
    canvas:
        PushMatrix:
        Translate:
            xy: self.x, self.y
    canvas.after:
        PopMatrix:

<ToolBox@GridLayout>:
    cols: 2
    padding: 2
    PacManButton:
        canvas:
            Ellipse:
                size:12,12
                pos:14,14
                angle_start: 120
                angle_end: 420
    ToolButton:
        canvas:
            Ellipse:
                size:12,12
                pos:14,14
    StickManButton:
        StickMan
